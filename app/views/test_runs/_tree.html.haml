:coffee
  $('.tree-toggler').click (e) ->
    e.preventDefault()
    $(this).parent().children('ul.tree').toggle 300
  $('.test-case-in-list').click (e) ->
    e.preventDefault()
    $that = $(this)
    $('.test-case-in-list').removeClass 'active'
    $that.addClass 'active'
    return
