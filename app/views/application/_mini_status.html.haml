.status
  - if defined?(target) && target.respond_to?('status_count')
    - target.status_count.each do |status, count|
      %span{ class: "label label-#{status_map(status)}"}= count
    - if defined?(consolidate) && consolidate
      %span.small
        - target.status_count(nil, consolidate = 5).each do |status, count|
          %span{ class: "label label-#{status_map(status)}"}= count
